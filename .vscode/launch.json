{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/ts-node",
            "args": ["${workspaceFolder}/src/index.ts"], // Pfad zur Haupt-TS-Datei deines Projekts
            "protocol": "inspector",
            "env": {
                "NODE_ENV": "development"
            },
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "skipFiles": [
                "<node_internals>/**"
            ]
        }
    ]
}
  